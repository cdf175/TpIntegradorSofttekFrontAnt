@model  TpIntegradorSofttekFront.ViewModels.UserViewModel

<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Usuarios.</h5>
            </div>
            @using (Html.BeginForm("SaveUser", "/User", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.HiddenFor(x=> x.Id)
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Nombre</label>
                            @Html.EditorFor(x=> x.Name, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">DNI</label>
                            @Html.EditorFor(x=> x.Dni, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-2 form-control-label">Mail</label>
                            @* @Html.EditorFor(x=> x.Email, new {htmlAttributes = new {@class = "col-md-8 form-control" } }) *@
                            @Html.TextBoxFor(model => model.Email, new { @class = "col-md-8 form-control", type = "email", required = "required" })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Contraseña</label>
                            @* @Html.EditorFor(x=> x.Password, new {htmlAttributes = new {@class = "col-md-8 form-control" }, required = "required" }) *@
                            @* @Html.TextBoxFor(model => model.Password, new { @class = "text", type = "email", required = "required" }) *@
                            @Html.PasswordFor(model => model.Password, new { @class = "col-md-8 form-control", required = "required" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Role</label>
                            @Html.EditorFor(x=> x.Type, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>
